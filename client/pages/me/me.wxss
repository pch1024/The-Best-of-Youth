/* pages/me/me.wxss */
:host{
  background-color: #fafafa; 
}
.u_box_body.edit .date,
.u_box_body.edit textarea{
  background-color: #f5f5f5;
  padding:5px;
  width: auto;
  margin: 5px;
} 
.u_avatar{
  padding: 15px;
}
.u_avatar image{
  width: 100px;
  height: 100px;
  margin: 0 auto;
  display: block;
  border-radius: 50%;
  background-color: white;
}
.u_word{
  width: 90%;
  margin: 10px auto;
  position: relative;
  padding-bottom:20px; 
  text-align: center;
}
.u_word input{
  display: block;
  padding: 0 10px;
  background-color:white;
  height:50px;
}
.u_box{
  width: 90%;
  margin: 10px auto;
  background-color: white;
  box-shadow: 1px 1px 1px 1px #ccc;
}
.u_box .u_box_header{
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  padding: 15px;
  border-bottom: 1px solid #ddd;
}
.u_box .u_box_body{
  padding: 15px;
  text-align: justify;
}
.u_box_add{
  width: 90%;
  margin: 10px auto;
  height: 30px;
  line-height: 30px;
  text-align: center;
  box-shadow: 1px 1px 1px 1px #ccc;
}

button.submit,.doEdit,.unEdit{
  padding: 0;
  margin: 0;
  position:fixed;
  right:15px;
  width:50px;
  height:50px;
  line-height: 50px;
  border-radius:50%;
  background-color:#179B16;
  bottom:50px;
  font-size: 14px;
  color: white;
  text-align: center;
  pointer-events: auto;
}
.unEdit{
  bottom:110px;
}